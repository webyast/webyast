<table  class="list" cellpadding="0" cellspacing="20">
  <tr>
     <td class="first">
        <%=link_to image_tag("go-top2.png"),
            :remote => true,
            :update => log_id(id),
            :url => { :action => "ajax_log_custom", :id => id, :lines => lines, :pos_begin =>1 } %>
     </td>
     <td>
        <%=link_to image_tag("go-up2.png"),
            :remote => true,
            :update => log_id(id),
            :url => { :action => "ajax_log_custom", :id => id, :lines => lines, :pos_begin =>(position-lines) } %>
     </td>
     <td>
        <%=link_to image_tag("go-down2.png"),
            :remote => true,
            :update => log_id(id),
            :url => { :action => "ajax_log_custom", :id => id, :lines => lines, :pos_begin =>(position+lines) } %>
     </td>
     <td class="last">
        <%=link_to image_tag("go-bottom2.png"),
            :remote => true,
            :update => log_id(id),
            :url => { :action => "ajax_log_custom", :id => id, :lines => lines, :pos_begin =>0 } %>
     </td>
  </tr>
</table>

<pre>
<%= content %>
</pre>

