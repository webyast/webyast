<% javascript_tag do -%>
  <% if defined? go_on %>
    continue_loop = <%= go_on %>;
  <% end -%>
<% end -%>

<%= report_error(error, _("An error occured while installing patches.")) if error %>

<div class="status_patches">
    <% link_to "patch_updates" do %>
      <% if error %>
        <div class="status-icon error"></div>
      <% else %>
        <div class="status-icon ok"></div>
      <% end %>
      <span><%= patch %></span>
    <% end %>
    <% unless message.empty? %>
      <div id="patch_message" >
        <div>
          <%= message %>
        </div>
      </div>

      <script type="text/javascript">
        $(document).ready(
           function() {
             // define a dialog
             $('#patch_message').dialog(
               {
                  bgiframe: true,
                  autoOpen: false,
                  height: 'auto',
                  title: "<%= _("Patch Installation")%>",
                  modal: false
                });
             // open detail popup
             $('#patch_message').dialog('open');
           });
      </script>
    <% end %>

    <% if !defined?(go_on) or go_on %>
      <%= button_to_remote _("Stop"), :update =>"status_patches", :url=>{ :controller => :patches, :action => :stop_install_all}, :confirm => _("Are you sure?") %>
    <% end %>
    <%= periodically_call_remote(:condition => "continue_loop == true", :update =>"status_patches", :url=>{ :controller => :patches, :action => :install_all}, :frequency => 20) %>
</div>
